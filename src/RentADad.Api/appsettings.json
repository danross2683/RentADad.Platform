{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=rentadad;Username=postgres;Password=postgres",
    "Test": "DataSource=:memory:"
  },
  "Database": {
    "AutoMigrate": true
  },
  "Auth": {
    "Enabled": false,
    "Issuer": "RentADad.Platform",
    "Audience": "RentADad.Platform",
    "SigningKey": "dev-only-change-this"
  },
  "OpenTelemetry": {
    "Exporter": "otlp",
    "OtlpEndpoint": "http://localhost:4317"
  },
  "BookingExpiry": {
    "Enabled": true,
    "IntervalSeconds": 60,
    "BatchSize": 100
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
