{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=rentadad;Username=postgres;Password=postgres",
    "Test": "DataSource=:memory:"
  },
  "Database": {
    "AutoMigrate": true
  },
  "Auth": {
    "Enabled": false,
    "Issuer": "RentADad.Platform",
    "Audience": "RentADad.Platform",
    "SigningKey": "dev-only-change-this",
    "ApiKeys": []
  },
  "OpenTelemetry": {
    "Exporter": "otlp",
    "OtlpEndpoint": "http://localhost:4317"
  },
  "BookingExpiry": {
    "Enabled": true,
    "IntervalSeconds": 60,
    "BatchSize": 100
  },
  "Idempotency": {
    "RetentionHours": 24
  },
  "Caching": {
    "ProviderAvailabilitySeconds": 30
  },
  "Notifications": {
    "WebhookUrl": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
